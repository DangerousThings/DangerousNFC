<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/rounded_primary">

    <ImageView
        android:id="@+id/item_saved_implants_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/implant_placeholder"
        android:contentDescription="@string/implant_image" />

    <TextView
        android:id="@+id/item_saved_implants_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/proxima_nova_bold"
        android:textColor="?attr/colorSecondary"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/item_saved_implants_image"
        app:layout_constraintTop_toTopOf="@+id/item_saved_implants_image" />

    <TextView
        android:id="@+id/item_saved_implants_text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/proxima_nova_regular"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintStart_toEndOf="@+id/item_saved_implants_image"
        app:layout_constraintTop_toBottomOf="@+id/item_saved_implants_text_name" />

</androidx.constraintlayout.widget.ConstraintLayout>